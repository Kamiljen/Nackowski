@using Microsoft.AspNetCore.Identity;
@using  Nackowski.Identity;

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
   
    <li class="nav-item">
        <a asp-area="Identity" class="nav-link" asp-page="/Account/Manage/Index" title="Manage">Hej @UserManager.GetUserName(User)</a>
    </li>
    <li class="nav-item">
        <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm" class="navbar-right text-muted">
            <button type="submit" class="btn btn-link navbar-btn navbar-link text-muted">Logout</button>
        </form>
    </li>
}
else
{

    <li class="nav-item">
        <a asp-area="Identity" class="nav-link" asp-page="/Account/Register">Registrera</a>
    </li>
    <li class="nav-item">
        <a asp-area="Identity" class="nav-link" asp-page="/Account/Login">Logga in</a>
    </li>

}


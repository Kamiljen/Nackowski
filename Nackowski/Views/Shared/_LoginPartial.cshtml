@using Microsoft.AspNetCore.Identity
@using  Nackowski.Identity;

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm" class="navbar-right text-muted">
        
                <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
            
                <button type="submit" class="btn btn-link navbar-btn navbar-link text-muted">Logout</button>
      
    </form>
}
else
{
    
        <a asp-area="Identity" class="btn btn-link navbar-btn navbar-link text-muted" asp-page="/Account/Register">Register</a>
        <a asp-area="Identity" class="btn btn-link navbar-btn navbar-link text-muted" asp-page="/Account/Login">Login</a>
    
}